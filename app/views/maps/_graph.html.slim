- x ||= 0
- y ||= 0
- parties ||= []
- logo_path ||= false

scss:
  .graph {
    width: 100%;
    overflow: hidden;
    .grid {
      stroke: #666666;
      stroke-dasharray: 0;
      stroke-width: 1;
    }
    .label {
      font-size: 6px;
      fill: #666666;
    }
    .data {
      fill: red;
      stroke-width: 1;
    }
    .pointer {
      fill: blue;
      color: blue;
    }
    .cross{
      stroke: red;
      stroke-dasharray: 2;
      stroke-dashoffset: 0;
      animation: dash 0.8s linear infinite;
    }
    @keyframes dash {
      from {
        stroke-dashoffset: 8;
      }
      to {
        stroke-dashoffset: 0;
      }
    }
  }

