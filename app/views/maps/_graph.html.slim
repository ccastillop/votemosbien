- x ||= 0
- y ||= 0
- parties ||= []
- logo_path ||= false

css:
  .graph {
    width: 100%;
    max-height: 640px;
    .grid {
      stroke: #666666;
      stroke-dasharray: 0;
      stroke-width: 1;
    }
    .label {
      font-size: 6px;
      fill: #666666;
    }
    .label-small {
      font-size: 4px;
    }
    .data {
      fill: red;
      stroke-width: 1;
    }
    .pointer {
      fill: blue;
      color: blue;
    }
    .cross{
      stroke: blue;
      stroke-dasharray: 3;
      stroke-dashoffset: 0;
      animation: dash 1s linear alternate infinite;
    }
    .dot {
      stroke-width: 1;
      animation: dot 1s linear alternate infinite;
      fill: #AA001F;
      fill-opacity: 0.3;
      stroke: #AA001F;
    }
    @keyframes dash {
      from {
        stroke-dashoffset: 6;
      }
      to {
        stroke-dashoffset: 0;
      }
    }
    @keyframes dot {
      from {
        r: 6;
      }
      to {
        r: 0;
      }
    }
  }

