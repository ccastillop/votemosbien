- x ||= 0
- y ||= 0
- logo_path ||= image_path("map-pin.svg")

scss:
  .graph {
    width: 100%;
    overflow: hidden;
    .grid {
      stroke: #666666;
      stroke-dasharray: 0;
      stroke-width: 1;
    }
    .label {
      font-size: 6px;
      fill: #666666;
    }
    .data {
      fill: red;
      stroke-width: 1;
    }
  }

svg.graph width="100%" height="420" viewBox="0 0 120 120"

